		.pb-4.border-bottom
			.row.align-items-center
				.col-8.col-lg-6
					.d-flex.justify-content-between.align-items-center
						.logo-name Technotochka
						nav.d-none.d-md-block
							ul.d-flex.gap48
								li 
									a(href="#") Главная
								li 
									a(href="#") Контакты
								li 
									a(href="#") О нас
