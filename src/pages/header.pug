	ul.menu
		.container-fluid.bg-brown.menu-mob.pt-3.rounded-bottom-5.d-block.d-md-none
			button.btn.close(aria-label="Aria Close")
				include ../assets/img/close.svg
			.d-flex.flex-column.justify-content-center
				each val, key in {main:'Главная', contacts:'Контакты', about:'О нас'}
					li.text-center.my-4
						a(href='#'+key class='cb')= val
